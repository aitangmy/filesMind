{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FilesMind",
  "version": "0.1.0",
  "identifier": "com.aitangmii.filesmind",
  "build": {
    "beforeDevCommand": "npm --prefix frontend run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm --prefix frontend run build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "FilesMind",
        "width": 1480,
        "height": 920,
        "minWidth": 1080,
        "minHeight": 700,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/filesmind-backend"
    ]
  }
}
